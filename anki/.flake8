[flake8]
max-line-length = 100
max-complexity = 10
exclude = 
    .venv,
    venv,
    __pycache__,
    .git,
    dist,
    build,
    *.egg-info
ignore = 
    E203,  # whitespace before ':'
    W503,  # line break before binary operator
    E501   # line too long (handled by black)
per-file-ignores =
    __init__.py: F401
    test_*.py: F401,F811