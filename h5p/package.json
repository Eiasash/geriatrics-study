{
  "name": "geriatrics-h5p",
  "private": true,
  "scripts": {
    "build": "node build-h5p.js",
    "build:qset": "node build-h5p-questionset.js",
    "build:mega": "node build-h5p-mega.js",
    "build:all": "npm run build && npm run build:qset && npm run build:mega",
    "validate": "node validate-content.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .js,.jsx || true",
    "lint:fix": "eslint . --ext .js,.jsx --fix",
    "format": "prettier --write \"**/*.{js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,json,css,md}\"",
    "prebuild": "npm run validate",
    "prebuild:qset": "npm run validate",
    "prebuild:mega": "npm run validate"
  },
  "dependencies": {
    "adm-zip": "0.5.16",
    "fs-extra": "^11.2.0",
    "glob": "^11.0.0",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "audit-ci": "^7.0.1",
    "eslint": "^9.39.2",
    "expect": "^30.0.5",
    "h5p-cli": "^1.1.4",
    "jest": "^29.7.0",
    "prettier": "^3.7.4"
  }
}
