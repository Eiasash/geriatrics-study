{
  "name": "geriatrics-h5p",
  "private": true,
  "scripts": {
    "build": "node build-h5p.js",
    "build:qset": "node build-h5p-questionset.js",
    "build:mega": "node build-h5p-mega.js",
    "test": "jest",
    "test:coverage": "jest --coverage --coverageReporters=text-summary",
    "test:coverage:check": "jest --coverage --bail",
    "test:coverage:full": "jest --coverage --coverageReporters=text --coverageReporters=lcov",
    "coverage:report": "jest --coverage --coverageReporters=html && echo 'Coverage report generated in coverage/index.html'",
    "lint": "eslint . --ext .js,.jsx || true",
    "lint:fix": "eslint . --ext .js,.jsx --fix",
    "format": "prettier --write \"**/*.{js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,json,css,md}\"",
    "precommit": "npm run lint && npm run test:coverage:check"
  },
  "dependencies": {
    "fs-extra": "^11.2.0",
    "glob": "^11.0.0",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "audit-ci": "^7.0.1",
    "eslint": "^8.57.0",
    "expect": "^30.0.5",
    "h5p-cli": "^1.1.4",
    "jest": "^29.7.0",
    "prettier": "^3.2.5"
  }
}
