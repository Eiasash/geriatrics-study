{
  "name": "Journal Club Article Review",
  "version": "1.0.0",
  "description": "Structured template for critical appraisal of medical literature",
  "category": "medical-education",
  "sections": [
    {
      "id": "article-info",
      "title": "Article Information",
      "required": true,
      "fields": [
        { "id": "title", "label": "Article Title", "type": "text", "required": true },
        { "id": "authors", "label": "Authors", "type": "text", "required": true },
        { "id": "journal", "label": "Journal", "type": "text", "required": true },
        { "id": "year", "label": "Year", "type": "number", "required": true },
        { "id": "volume", "label": "Volume/Issue", "type": "text" },
        { "id": "pages", "label": "Pages", "type": "text" },
        { "id": "doi", "label": "DOI", "type": "text" },
        { "id": "pmid", "label": "PMID", "type": "text" },
        { "id": "impact-factor", "label": "Journal Impact Factor", "type": "number" }
      ]
    },
    {
      "id": "background",
      "title": "Background & Rationale",
      "required": true,
      "fields": [
        { "id": "current-knowledge", "label": "What Was Known Before", "type": "richtext" },
        { "id": "knowledge-gap", "label": "Knowledge Gap", "type": "richtext" },
        { "id": "study-objective", "label": "Study Objective/Hypothesis", "type": "text", "required": true },
        { "id": "clinical-importance", "label": "Clinical Importance", "type": "textarea" }
      ]
    },
    {
      "id": "pico",
      "title": "PICO Framework",
      "required": true,
      "fields": [
        { "id": "population", "label": "P - Population", "type": "textarea", "required": true, "hint": "Who was studied? Inclusion/exclusion criteria" },
        { "id": "intervention", "label": "I - Intervention/Exposure", "type": "textarea", "required": true, "hint": "What was done? Treatment, exposure, test" },
        { "id": "comparison", "label": "C - Comparison", "type": "textarea", "required": true, "hint": "Compared to what? Placebo, standard care, another treatment" },
        { "id": "outcome", "label": "O - Outcome", "type": "textarea", "required": true, "hint": "What was measured? Primary and secondary outcomes" }
      ]
    },
    {
      "id": "methods",
      "title": "Study Methods",
      "required": true,
      "fields": [
        { "id": "study-design", "label": "Study Design", "type": "select", "required": true, "options": [
          "Randomized Controlled Trial",
          "Cluster Randomized Trial",
          "Crossover Trial",
          "Prospective Cohort",
          "Retrospective Cohort",
          "Case-Control",
          "Cross-Sectional",
          "Case Series",
          "Case Report",
          "Systematic Review",
          "Meta-Analysis",
          "Diagnostic Accuracy Study",
          "Prognostic Study",
          "Qualitative Study",
          "Other"
        ]},
        { "id": "level-of-evidence", "label": "Level of Evidence", "type": "select", "options": ["I", "II", "III", "IV", "V"] },
        { "id": "setting", "label": "Study Setting", "type": "text" },
        { "id": "sample-size", "label": "Sample Size", "type": "text" },
        { "id": "recruitment", "label": "Recruitment Period", "type": "text" },
        { "id": "follow-up", "label": "Follow-up Duration", "type": "text" },
        { "id": "randomization", "label": "Randomization Method", "type": "text" },
        { "id": "blinding", "label": "Blinding", "type": "select", "options": ["Open-label", "Single-blind", "Double-blind", "Triple-blind", "N/A"] },
        { "id": "allocation-concealment", "label": "Allocation Concealment", "type": "text" },
        { "id": "intervention-details", "label": "Intervention Details", "type": "richtext" },
        { "id": "control-details", "label": "Control/Comparison Details", "type": "richtext" },
        { "id": "primary-outcome", "label": "Primary Outcome Definition", "type": "text" },
        { "id": "secondary-outcomes", "label": "Secondary Outcomes", "type": "list" }
      ]
    },
    {
      "id": "statistics",
      "title": "Statistical Analysis",
      "fields": [
        { "id": "power-calculation", "label": "Power Calculation", "type": "textarea", "hint": "Was the study adequately powered?" },
        { "id": "analysis-type", "label": "Analysis Type", "type": "select", "options": ["Intention-to-treat", "Per-protocol", "As-treated", "Modified ITT"] },
        { "id": "statistical-tests", "label": "Statistical Tests Used", "type": "list" },
        { "id": "adjustments", "label": "Adjustments/Covariates", "type": "list" },
        { "id": "missing-data", "label": "Missing Data Handling", "type": "text" },
        { "id": "subgroup-analyses", "label": "Pre-specified Subgroup Analyses", "type": "list" }
      ]
    },
    {
      "id": "results",
      "title": "Results",
      "required": true,
      "fields": [
        { "id": "flow-diagram", "label": "Patient Flow", "type": "richtext", "hint": "Enrollment, allocation, follow-up, analysis" },
        { "id": "baseline-characteristics", "label": "Baseline Characteristics", "type": "richtext", "hint": "Were groups comparable?" },
        { "id": "primary-result", "label": "Primary Outcome Result", "type": "result-field", "required": true },
        { "id": "secondary-results", "label": "Secondary Outcome Results", "type": "result-list" },
        { "id": "adverse-events", "label": "Adverse Events", "type": "richtext" },
        { "id": "subgroup-results", "label": "Subgroup Analysis Results", "type": "richtext" },
        { "id": "nnt-nnh", "label": "NNT/NNH", "type": "text", "hint": "Number needed to treat/harm" }
      ]
    },
    {
      "id": "critical-appraisal",
      "title": "Critical Appraisal",
      "required": true,
      "fields": [
        { "id": "internal-validity", "label": "Internal Validity", "type": "appraisal-section", "questions": [
          "Was the randomization adequate?",
          "Was allocation concealment adequate?",
          "Were groups similar at baseline?",
          "Were participants/providers/assessors blinded?",
          "Was follow-up complete?",
          "Were outcomes measured objectively?",
          "Was the analysis appropriate?"
        ]},
        { "id": "external-validity", "label": "External Validity", "type": "appraisal-section", "questions": [
          "Is the study population similar to my patients?",
          "Was the intervention feasible in my setting?",
          "Were all important outcomes considered?",
          "Are the results applicable to my practice?"
        ]},
        { "id": "bias-assessment", "label": "Risk of Bias Assessment", "type": "bias-tool", "domains": [
          { "domain": "Selection bias", "options": ["Low", "Unclear", "High"] },
          { "domain": "Performance bias", "options": ["Low", "Unclear", "High"] },
          { "domain": "Detection bias", "options": ["Low", "Unclear", "High"] },
          { "domain": "Attrition bias", "options": ["Low", "Unclear", "High"] },
          { "domain": "Reporting bias", "options": ["Low", "Unclear", "High"] },
          { "domain": "Other bias", "options": ["Low", "Unclear", "High"] }
        ]}
      ]
    },
    {
      "id": "limitations",
      "title": "Limitations",
      "fields": [
        { "id": "author-limitations", "label": "Limitations Acknowledged by Authors", "type": "list" },
        { "id": "additional-limitations", "label": "Additional Limitations Identified", "type": "list" },
        { "id": "generalizability", "label": "Generalizability Concerns", "type": "textarea" }
      ]
    },
    {
      "id": "discussion",
      "title": "Discussion",
      "fields": [
        { "id": "key-findings", "label": "Key Findings", "type": "list" },
        { "id": "comparison-literature", "label": "Comparison to Existing Literature", "type": "richtext" },
        { "id": "biological-plausibility", "label": "Biological Plausibility", "type": "textarea" },
        { "id": "authors-interpretation", "label": "Authors' Interpretation", "type": "textarea" },
        { "id": "our-interpretation", "label": "Our Interpretation", "type": "textarea" }
      ]
    },
    {
      "id": "geriatric-considerations",
      "title": "Geriatric Considerations",
      "fields": [
        { "id": "elderly-inclusion", "label": "Elderly Patient Inclusion", "type": "textarea", "hint": "Were elderly patients (≥65, ≥75, ≥85) adequately represented?" },
        { "id": "exclusion-criteria", "label": "Exclusion Criteria Affecting Elderly", "type": "list", "hint": "Cognitive impairment, frailty, polypharmacy, etc." },
        { "id": "subgroup-elderly", "label": "Elderly Subgroup Analysis", "type": "textarea" },
        { "id": "frailty-considerations", "label": "Frailty Considerations", "type": "textarea" },
        { "id": "polypharmacy", "label": "Polypharmacy Implications", "type": "textarea" },
        { "id": "functional-outcomes", "label": "Functional Outcome Assessment", "type": "textarea", "hint": "Were ADLs, QoL, or functional status measured?" },
        { "id": "time-to-benefit", "label": "Time to Benefit vs. Life Expectancy", "type": "textarea" }
      ]
    },
    {
      "id": "clinical-applicability",
      "title": "Clinical Applicability",
      "required": true,
      "fields": [
        { "id": "applicable-population", "label": "Applicable Patient Population", "type": "textarea" },
        { "id": "practice-change", "label": "Implications for Practice", "type": "richtext" },
        { "id": "barriers", "label": "Barriers to Implementation", "type": "list" },
        { "id": "facilitators", "label": "Facilitators for Implementation", "type": "list" },
        { "id": "cost-considerations", "label": "Cost/Resource Considerations", "type": "textarea" },
        { "id": "shared-decision-making", "label": "Shared Decision Making Points", "type": "list" }
      ]
    },
    {
      "id": "conclusions",
      "title": "Conclusions",
      "required": true,
      "fields": [
        { "id": "bottom-line", "label": "Bottom Line", "type": "text", "required": true, "hint": "One-sentence clinical take-home message" },
        { "id": "strength-of-recommendation", "label": "Strength of Recommendation", "type": "select", "options": [
          "Strong recommendation for",
          "Weak recommendation for",
          "No recommendation",
          "Weak recommendation against",
          "Strong recommendation against"
        ]},
        { "id": "quality-of-evidence", "label": "Quality of Evidence", "type": "select", "options": ["High", "Moderate", "Low", "Very Low"] },
        { "id": "key-takeaways", "label": "Key Takeaways", "type": "numbered-list", "min": 2, "max": 4 },
        { "id": "future-research", "label": "Future Research Needed", "type": "list" }
      ]
    },
    {
      "id": "references",
      "title": "References",
      "fields": [
        { "id": "primary-article", "label": "Primary Article Citation", "type": "citation" },
        { "id": "additional-references", "label": "Additional References", "type": "reference-list" }
      ]
    }
  ],
  "scoring": {
    "critical-appraisal": {
      "checklist": "Adapted from CASP and GRADE frameworks",
      "validity-domains": ["selection", "performance", "detection", "attrition", "reporting"]
    }
  },
  "quality-criteria": {
    "rct": {
      "checklist": "CONSORT",
      "bias-tool": "Cochrane Risk of Bias 2.0"
    },
    "observational": {
      "checklist": "STROBE",
      "bias-tool": "ROBINS-I"
    },
    "systematic-review": {
      "checklist": "PRISMA",
      "bias-tool": "AMSTAR 2"
    },
    "diagnostic": {
      "checklist": "STARD",
      "bias-tool": "QUADAS-2"
    }
  }
}
